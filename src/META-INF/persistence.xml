<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="taxaccounting" transaction-type="RESOURCE_LOCAL">
    <class>accounts.db.BankAccount</class>
    <class>accounts.db.TRId</class>
    <class>accounts.db.TR</class>
    <class>accounts.db.RealProperty</class>
    <class>accounts.db.IGroup</class>
    <class>accounts.db.inst.TR1</class>
    <class>accounts.db.inst.TR2</class>
    <class>accounts.db.inst.TR3</class>
    <class>accounts.db.inst.TR4</class>
    <class>accounts.db.inst.TR5</class>
    <class>accounts.db.inst.TR6</class>
    <class>accounts.db.inst.TR7</class>
    <class>accounts.db.inst.TR8</class>
    <class>accounts.db.inst.TR9</class>
    <class>accounts.db.inst.TR10</class>
    <class>accounts.db.inst.TR11</class>
    <class>accounts.db.inst.TR12</class>
    <class>accounts.db.inst.TR13</class>
    <class>accounts.db.inst.TR14</class>
    <class>accounts.db.inst.TR15</class>
    <class>accounts.db.inst.TR16</class>
    <class>accounts.db.inst.TR17</class>
    <class>accounts.db.inst.TR18</class>
    <class>accounts.db.inst.TR19</class>
    <class>accounts.db.inst.TR20</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />

      <property name="javax.persistence.jdbc.user" value="test" />
      <property name="javax.persistence.jdbc.password" value="test" />

      <!-- EclipseLink should create the database schema automatically -->
      

      <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
      <property name="eclipselink.create-ddl-jdbc-file-name" value="createDDL_ddlGeneration.jdbc"/>
      <property name="eclipselink.drop-ddl-jdbc-file-name" value="dropDDL_ddlGeneration.jdbc"/>
      <property name="eclipselink.ddl-generation.output-mode" value="both"/>

    </properties>

  </persistence-unit>
</persistence> 